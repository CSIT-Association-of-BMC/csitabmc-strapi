{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date"
    },
    "location": {
      "type": "string",
      "required": true,
      "default": "Google Meet"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Workshop",
        "Seminar",
        "Hackathon",
        "Training",
        "Networking",
        "Competition",
        "Mentorship",
        "Tech Talk"
      ],
      "default": "Workshop"
    },
    "tags": {
      "type": "string",
      "default": "csitabmc, workshop ",
      "required": true
    },
    "registrationFormUrl": {
      "type": "string"
    },
    "certificates": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::certificate.certificate",
      "mappedBy": "event"
    },
    "mentors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::mentor.mentor",
      "mappedBy": "events"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "startTime": {
      "type": "time"
    },
    "endTime": {
      "type": "time"
    },
    "organizer": {
      "type": "string",
      "required": true,
      "default": "CSIT Association of BMC"
    },
    "availableSeats": {
      "type": "integer",
      "default": 0
    },
    "registrationFeeBMC": {
      "type": "integer",
      "default": 0
    },
    "registrationFee": {
      "type": "integer",
      "default": 0
    },
    "registrationOpen": {
      "type": "boolean",
      "default": true,
      "required": true
    }
  }
}
